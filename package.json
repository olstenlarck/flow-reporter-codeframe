{
  "name": "flow-reporter-codeframe",
  "description": "FlowType errors reporter similiar to ESLint's codeframe one",
  "license": "Apache-2.0",
  "licenseStart": "2018",
  "scripts": {
    "predocs": "rm -rf docs",
    "docs": "docks 'src/**/*' --outfile docs/API.md && verb",
    "lint": "eslint src test --fix --quiet",
    "test": "nyc --require esmc/register asia",
    "commit-dry": "git status --porcelain && git add -A && gitcommit -sS",
    "precommit": "yarn lint && yarn test",
    "commit": "yarn commit-dry",
    "prepublishOnly": "ESMC_NODE_VERSION=6 yarn esmc --force",
    "cli": "node bin/cli.js"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "dependencies": {
    "@babel/code-frame": "^7.0.0-rc.1",
    "ansi-colors": "^4.0.0",
    "esm": "^3.0.74",
    "fs-extra": "^8.0.0",
    "get-stdin": "^8.0.0",
    "is-ci": "^2.0.0",
    "mri": "^1.1.1",
    "supports-color": "^7.0.0"
  },
  "devDependencies": {
    "all-contributors-cli": "^6.0.0",
    "asia": "^0.19.7",
    "docks": "^0.7.0",
    "esmc": "*",
    "gitcommit": "^1.0.9",
    "new-release": "^5.0.0",
    "nyc": "^15.0.0"
  },
  "files": [
    "dist",
    "bin"
  ],
  "bin": "bin/cli.js",
  "main": "dist/nodejs/__index.js",
  "module": "dist/nodejs/index.js",
  "version": "0.0.0-semantically-released",
  "repository": "olstenlarck/flow-reporter-codeframe",
  "homepage": "https://github.com/olstenlarck/flow-reporter-codeframe",
  "author": "Charlike Mike Reagent (https://tunnckocore.com)",
  "publishConfig": {
    "access": "public"
  },
  "eslintConfig": {
    "extends": "esmc"
  },
  "renovate": {
    "extends": "tunnckocore"
  },
  "nyc": {
    "statements": 50,
    "functions": 50,
    "branches": 50,
    "lines": 50,
    "cache": true,
    "check-coverage": true,
    "reporter": [
      "lcov",
      "text"
    ],
    "exclude": [
      "test"
    ]
  },
  "verb": {
    "run": true,
    "toc": {
      "render": true,
      "method": "preWrite",
      "maxdepth": 3,
      "footer": ""
    },
    "layout": "empty",
    "tasks": [
      "readme"
    ],
    "lint": {
      "reflinks": true
    }
  }
}
